#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# This file is public domain software, originally written by Joey Hess. 

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

CFLAGS = -Wall -g
UDEB_CFLAGS = -Wall -g
DIR_FLAGS = srcdir=.. VPATH=..

ifneq (,$(filter noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
	UDEB_CFLAGS += -O0
else
	CFLAGS += -O2
	UDEB_CFLAGS += -Os -fomit-frame-pointer
endif

PACKAGE = fbset
UDEB_PACKAGE = $(PACKAGE)-udeb

build-indep:

build-arch:
	dh_testdir
	
	mkdir -p build-udeb
	ln -f Makefile build-udeb/Makefile
	$(MAKE) -C build-udeb $(DIR_FLAGS) CPPFLAGS="-I.." \
	  CFLAGS="$(UDEB_CFLAGS)"
	
	mkdir -p build-tree
	ln -f Makefile build-tree/Makefile
	$(MAKE) -C build-tree $(DIR_FLAGS) CPPFLAGS="-I.." \
	  CFLAGS="$(CFLAGS)"

build: build-indep build-arch

clean:
	dh_testdir
	dh_testroot
	
	rm -rf build-udeb
	rm -rf build-tree
	
	# FIXME: this can be removed once and if con2fbmap is merged upstream
	rm -f con2fbmap
	
	dh_clean

install-arch: build-arch
	dh_testdir
	dh_testroot
	dh_prep -a
	dh_installdirs
	
	$(MAKE) -C build-udeb install \
	  $(DIR_FLAGS) DESTDIR=$(CURDIR)/debian/$(UDEB_PACKAGE)
	rm -rf $(CURDIR)/debian/$(UDEB_PACKAGE)/usr
	
	$(MAKE) -C build-tree install \
	  $(DIR_FLAGS) DESTDIR=$(CURDIR)/debian/$(PACKAGE)

.PHONY: build-indep build-arch build install-arch clean

binary-indep:
# Nothing to do.

binary-arch: install-arch
	dh_testdir
	dh_testroot
	dh_installdocs -a
	dh_installexamples -a
	dh_installman -a
	dh_installchangelogs -a
	dh_link -a
	dh_strip -a
	dh_compress -a
	dh_fixperms -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-indep binary-arch

.PHONY: binary-indep binary-arch binary
