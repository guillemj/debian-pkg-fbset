#!/bin/sh
#
# Post-Installation script

set -e

# Source debconf library.
. /usr/share/debconf/confmodule

db_version 2.0

# Create framebuffer devices if they don't exist,
# and we are not using stuff like udev.

if [ ! -c /dev/fb0 ] ; then
  if [ -e /dev/MAKEDEV ] ; then
    cd /dev
    ./MAKEDEV fb
  fi
fi

#DEBHELPER#

exit 0

